  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Launch Chrome with gulp serve",
      "type": "chrome",
      "request": "launch",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "url": "http://localhost:4200/#/home",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
